{
  "extends": "stylelint-config-sass-guidelines",
  "plugins": [
		"stylelint-order"
	],
 "rules": {   
  "order/order": [
    "custom-properties",
    "declarations"
  ],
  "order/properties-alphabetical-order": true
 },
 "stylelint": {
  "extends": [
      "stylelint-config-idiomatic-order",
      "./node_modules/prettier-stylelint/config.js"
  ],
  "rules": {
      "indentation": 4,
      "string-quotes": "single"
  }
}
}
